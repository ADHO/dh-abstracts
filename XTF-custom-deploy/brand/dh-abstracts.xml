<?xml version="1.0" encoding="UTF-8"?>

<brand xmlns="http://www.w3.org/1999/xhtml">
 
 <!--incorporating default for now -->
   <links>
      <link rel="stylesheet" href="css/default/results.css" type="text/css"/>
      <link rel="shortcut icon" href="icons/default/favicon.ico" />
   </links>
   
   <dynaxml.links>
      <link rel="stylesheet" href="css/default/content.css" type="text/css"/>
      <link rel="shortcut icon" href="icons/default/favicon.ico" />
   </dynaxml.links>
  
   <header>
      <div class="header">
         <img src="icons/brand/ADHO-logo.png" width="100" height="100" alt="ADHO" class="left-logo"/>
         <img src="icons/brand/ACH-logo.jpg" width="100" height="100" alt="ACH" class="right-logo"/>
         <h1 class="text_line">Digital Humanities Abstracts</h1> 
         <br class="clear" />
      </div>
   </header>
   
   <!-- keeping former dh-abstracts dynaxml.header -->
   <dynaxml.header>
      <div class="header">
         <img src="icons/default/xtf_logo.gif" width="302" height="18" alt="eXtensible Text Framework" class="xtf-logo"/>
         <img src="icons/brand/adho_logo_large.png" width="392" height="140" alt="graphic" class="my-logo" />
         <div class="searchBox">
            <form method="get" id="searchform" action="{$xtfURL}{$crossqueryPath}">
               <div>
                  <input class="query" type="text"
                     value="Search: enter term, hit return"
                     onfocus="clearDefaultValue(this , 'Search: enter term, hit return')"
                     onblur="addDefaultValue(this , 'Search: enter term, hit return')"
                     name="keyword" id="s"/>
               </div>
            </form>
         </div>
         <br class="clear" />
      </div>
   </dynaxml.header>
   
   <!-- revised footer from new default -->
   <footer>
      <div class="footer">
         <a href="mailto:web@digitalhumanities.org">Comments? Questions?</a> | <a href="javascript://" onclick="javascript:window.open('/xtf/search?smode=getLang','popup','width=500,height=200,resizable=no,scrollbars=no')">Choose Language</a>
      </div>
   </footer> 
   
</brand>
